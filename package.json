{
    "type": "module",
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/yamayuski/babylon-vrm.git"
    },
    "description": "A VRM, glTF 2.0 extension implementation for Babylon.js",
    "keywords": [
        "3D",
        "html5",
        "webgl",
        "webgpu",
        "babylon.js",
        "gltf",
        "vrm"
    ],
    "homepage": "https://github.com/yamayuski/babylon-vrm",
    "bugs": {
        "url": "https://github.com/yamayuski/babylon-vrm/issues"
    },
    "license": "MIT",
    "author": {
        "name": "Masaru Yamagishi",
        "email": "m.yamagishi90+git@gmail.com",
        "url": "https://cafe-capy.net"
    },
    "name": "babylon-vrm-root",
    "private": true,
    "packageManager": "pnpm@10.14.0",
    "engines": {
        "node": "^22.11.0 || ^24.6.0"
    },
    "devDependencies": {
        "@babylonjs/core": "^8.0.0",
        "@babylonjs/loaders": "^8.0.0",
        "@biomejs/biome": "2.2.0",
        "@types/node": "^24.2.1",
        "cross-env": "^10.0.0",
        "rolldown": "^1.0.0-beta.31",
        "typescript": "^5.9.2"
    },
    "scripts": {
        "ci:fix": "npx @biomejs/biome check --write --unsafe",
        "ci": "npx @biomejs/biome ci",
        "build:dev": "cross-env NODE_ENV=development pnpm run --recursive --if-present build",
        "build:prod": "cross-env NODE_ENV=production pnpm run --recursive --if-present build",
        "generate-schema": "pnpm run --recursive --if-present generate-schema && pnpm run ci:fix"
    }
}
