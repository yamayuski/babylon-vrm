{
    "type": "module",
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/yamayuski/babylon-vrm.git"
    },
    "description": "A VRM, glTF 2.0 extension implementation for Babylon.js",
    "keywords": [
        "3D",
        "html5",
        "webgl",
        "webgpu",
        "babylon.js",
        "gltf",
        "vrm"
    ],
    "homepage": "https://github.com/yamayuski/babylon-vrm",
    "bugs": {
        "url": "https://github.com/yamayuski/babylon-vrm/issues"
    },
    "license": "MIT",
    "author": {
        "name": "Masaru Yamagishi",
        "email": "m.yamagishi90+git@gmail.com",
        "url": "https://cafe-capy.net"
    },
    "name": "babylon-vrm-root",
    "private": true,
    "packageManager": "pnpm@10.14.0",
    "engines": {
        "node": "^22.11.0 || ^24.6.0"
    },
    "devDependencies": {
        "@babylonjs/core": "^8.23.1",
        "@babylonjs/loaders": "^8.23.1",
        "@biomejs/biome": "2.2.0",
        "@changesets/cli": "^2.29.6",
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@commitlint/prompt-cli": "^19.8.1",
        "@types/node": "^24.3.0",
        "@vitest/coverage-v8": "^3.2.4",
        "cross-env": "^10.0.0",
        "husky": "^9.1.7",
        "rolldown": "1.0.0-beta.32",
        "typescript": "^5.9.2",
        "vite": "^7.1.2",
        "vitest": "^3.2.4"
    },
    "scripts": {
        "test": "pnpm run --recursive --if-present test",
        "test:coverage": "pnpm run --recursive --if-present test:coverage",
        "lint": "npx @biomejs/biome ci",
        "lint:fix": "npx @biomejs/biome check --write --unsafe",
        "build:dev": "cross-env NODE_ENV=development pnpm run --recursive --if-present build",
        "build:prod": "cross-env NODE_ENV=production pnpm run --recursive --if-present build",
        "generate-schema": "pnpm run --recursive --if-present generate-schema && pnpm run lint:fix",
        "ci": "pnpm run lint && pnpm run build:prod && pnpm test",
        "prepare": "husky",
        "commit": "commit"
    }
}
