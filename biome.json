{
    "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
    "formatter": {
        "enabled": true,
        "useEditorconfig": true,
        "lineWidth": 120
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "assist": {
        "enabled": true,
        "actions": {
            "recommended": true
        }
    },
    "files": {
        "includes": ["**", "!**/dist", "!**/types", "!**/node_modules"]
    }
}
